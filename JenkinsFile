pipeline {
	agent any
	
	stages {
		stage ('compile stage') {
			step {
				withMaven(maven : 'maven_3.6.0') {
					sh 'mvn clean compile'
				}
			}
		}
		
		stage ('Unit Testing stage') {
			step {
				withMaven(maven : 'maven_3.6.0') {
					sh 'mvn test'
				}
			}
		}
		
		stage ('Static Code Analysis stage') {
			step {
				withMaven(maven : 'maven_3.6.0') {
					sh 'mvn sonar:sonar'
				}
			}
		}
		
		stage ('Manual Code Review stage') {
		
			step {
				input('Does the code review successful?')
			}
		}
		
		stage ('QA Deployment stage') {
			step {
				withMaven(maven : 'maven_3.6.0') {
					sh 'mvn deploy'
				}
			}
			
		}
		
		
	}
}
