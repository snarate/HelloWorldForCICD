pipeline {
    agent any
    tools {
        maven 'maven 3'
        jdk 'java 8'
    }
    stages {
	
	stage ("initialize") {
		steps {
			sh '''
			echo "PATH = ${PATH}"
			echo "M2_HOME = ${M2_HOME}"
			'''
		}
	}
        stage ('Build') {
            steps {
                bat 'mvn -Dmaven.test.failure.ignore=true install' 
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
    }
}
